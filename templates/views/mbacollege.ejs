<html>

<head>
    <title>Student Registration Form</title>
    <style>
        body {
            background-color: floralwhite;
        }

        h3 {
            font-family: Calibri;
            font-size: 25pt;
            font-style: normal;
            font-weight: bold;
            color: #fdfdff;
            text-align: center;
            text-decoration: underline
        }

        table {
            font-family: Calibri;
            color: white;
            font-size: 11pt;
            font-style: normal;
            font-weight: bold;
            background-color: gray;
            border-collapse: collapse;
        }

        table.inner {
            border: 0px
        }
    </style>
</head>

<body style="background: linear-gradient(to right,  #496a7a 0%,#802d2d 100%);">
    <h3>STUDENT REGISTRATION FORM</h3>
    <form action="/mbacollege" method="post" >
 
        <% if(msg !=''){ %>
            <p style="text-align: center; color: red;">   <%= msg %></p>
            <% } %>

        <table cellpadding="10" style="width: 100%; background: linear-gradient(to right, #679c6e 44%,#764d7f 98%);">
            <!----- First Name ---------------------------------------------------------->
            <tr>
                <td>FIRST NAME</td>
                <td><input type="text" name="fname" maxlength="30" placeholder="Enter First Name" pattern="[A-Za-z]{3,}"
                        required />  </td>
            </tr> <!----- Last Name ---------------------------------------------------------->
            <tr>
                <td>LAST NAME</td>
                <td><input type="text" name="lname" maxlength="30" placeholder="Enter last name" pattern="[A-Za-z]{3,}"
                        required />   </td>
            </tr> <!----- Date Of Birth -------------------------------------------------------->
            <tr>
                <td>DATE OF BIRTH</td>
                <td> <select name="date" id="Birthday_Day" required>
                        <option value="-1">Day:</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                        <option value="13">13</option>
                        <option value="14">14</option>
                        <option value="15">15</option>
                        <option value="16">16</option>
                        <option value="17">17</option>
                        <option value="18">18</option>
                        <option value="19">19</option>
                        <option value="20">20</option>
                        <option value="21">21</option>
                        <option value="22">22</option>
                        <option value="23">23</option>
                        <option value="24">24</option>
                        <option value="25">25</option>
                        <option value="26">26</option>
                        <option value="27">27</option>
                        <option value="28">28</option>
                        <option value="29">29</option>
                        <option value="30">30</option>
                        <option value="31">31</option>
                    </select> <select id="Birthday_Month" name="month" required>
                        <option value="-1">Month:</option>
                        <option value="January">Jan</option>
                        <option value="February">Feb</option>
                        <option value="March">Mar</option>
                        <option value="April">Apr</option>
                        <option value="May">May</option>
                        <option value="June">Jun</option>
                        <option value="July">Jul</option>
                        <option value="August">Aug</option>
                        <option value="September">Sep</option>
                        <option value="October">Oct</option>
                        <option value="November">Nov</option>
                        <option value="December">Dec</option>
                    </select> <select name="year" id="Birthday_Year" required>
                        <option value="-1">Year:</option>
                        <option value="2012">2012</option>
                        <option value="2011">2011</option>
                        <option value="2010">2010</option>
                        <option value="2009">2009</option>
                        <option value="2008">2008</option>
                        <option value="2007">2007</option>
                        <option value="2006">2006</option>
                        <option value="2005">2005</option>
                        <option value="2004">2004</option>
                        <option value="2003">2003</option>
                        <option value="2002">2002</option>
                        <option value="2001">2001</option>
                        <option value="2000">2000</option>
                        <option value="1999">1999</option>
                        <option value="1998">1998</option>
                        <option value="1997">1997</option>
                        <option value="1996">1996</option>
                        <option value="1995">1995</option>
                        <option value="1994">1994</option>
                        <option value="1993">1993</option>
                        <option value="1992">1992</option>
                        <option value="1991">1991</option>
                        <option value="1990">1990</option>
                        <option value="1989">1989</option>
                        <option value="1988">1988</option>
                        <option value="1987">1987</option>
                        <option value="1986">1986</option>
                        <option value="1985">1985</option>
                        <option value="1984">1984</option>
                        <option value="1983">1983</option>
                        <option value="1982">1982</option>
                        <option value="1981">1981</option>
                        <option value="1980">1980</option>
                    </select> </td>
            </tr> <!----- Email Id ---------------------------------------------------------->
            <tr>
                <td>EMAIL ID</td>
                <td><input type="text" name="email" maxlength="50" placeholder="abcde@gmail.com"
                        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required /></td>
            </tr> <!----- Mobile Number ---------------------------------------------------------->
            <tr>
                <td>Password</td>
                <td><input type="text" name="password" maxlength="50" placeholder="Create Password"
                        required /></td>
            </tr>
            <tr>
                <td>MOBILE NUMBER</td>
                <td> <input type="text" name="mnumber" maxlength="10" placeholder="9645435655"
                        pattern="[6-9]{1}[0-9]{9}" /> (10 digit number) </td>
            </tr> <!----- Gender ----------------------------------------------------------->
            <tr>
                <td>GENDER</td>
                <td> Male <input type="radio" name="gender" value="Male" /> Female <input type="radio" name="gender"
                        value="Female" /> </td>
            </tr> <!----- Address ---------------------------------------------------------->
            <tr>
                <td>ADDRESS <br /><br /><br /></td>
                <td><textarea name="address" rows="4" placeholder="Enter Your Full Address" cols="30"
                        required></textarea></td>
            </tr> <!----- City ---------------------------------------------------------->
            <tr>
                <td>CITY</td>
                <td><input type="text" name="city" placeholder="Enter Your City Name" maxlength="30"
                        pattern="[A-Za-z]{3,}" required /> (max 30 characters a-z and A-Z) </td>
            </tr> <!----- Pin Code ---------------------------------------------------------->
            <tr>
                <td>PIN CODE</td>
                <td><input type="text" name="pincode" maxlength="6" placeholder="Enter your pincode" pattern="[0-9]{6}"
                        required /> (6 digit number) </td>
            </tr> <!----- State ---------------------------------------------------------->
            <tr>
                <td>STATE</td>
                <td><input type="text" name="state" maxlength="30" placeholder="Enter your state name"
                        pattern="[A-Z a-z]{3,}" required /> (max 30 characters a-z and A-Z) </td>
            </tr> <!----- Country ---------------------------------------------------------->
            <tr>
                <td>COUNTRY</td>
                <td><input type="text" name="Country" value="India" readonly="readonly" required /></td>
            </tr> <!----- Jee Mains ---------------------------------------------------------->
           
            <tr>
                <td>College Name </td>
                <td><input type="text" name="college"  placeholder="Enter Full College Name"
                        required /></td>
            </tr>

            <tr>
                <td>CAT  </td>
                <td><input type="number" name="jeemains" maxlength="3" max="100" placeholder="percentile"
                        pattern="[0-9]{1,}" required /></td>
            </tr>
           
           <!----- Qualification---------------------------------------------------------->
            <tr>
                <td>QUALIFICATION <br /><br /><br /><br /><br /><br /><br /></td>
                <td>
                    <table>
                        <tr>
                            <td align="center"><b>Sl.No.</b></td>
                            <td align="center"><b>Examination</b></td>
                            <td align="center"><b>Board</b></td>
                            <td align="center"><b>Percentage</b></td>
                            <td align="center"><b>Year of Passing</b></td>
                        </tr>
                        <tr>
                            <td>1</td>
                            <td>Class X</td>
                            <td><input type="text" name="ClassX_Board" placeholder="Enter Board Name" maxlength="30"
                                    required /></td>
                            <td><input type="text" name="ClassX_Percentage" maxlength="2" placeholder="90"
                                    pattern="[0-9]{2}" required /></td>
                            <td><input type="text" name="ClassX_YrOfPassing" maxlength="4" placeholder="2000"
                                    pattern="[0-9]{4}" required /></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Class XII</td>
                            <td><input type="text" name="ClassXII_Board" maxlength="30" placeholder="Enter Board Name"
                                    required /></td>
                            <td><input type="text" name="ClassXII_Percentage" maxlength="2" placeholder="90"
                                    pattern="[0-9]{2}" required /></td>
                            <td><input type="text" name="ClassXII_YrOfPassing" maxlength="4" placeholder="2000"
                                    pattern="[0-9]{4}" required /></td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>Graduation</td>
                            <td><input type="text" name="Graduation_Board" maxlength="30"
                                    placeholder="Enter College Name" /></td>
                            <td><input type="text" name="Graduation_Percentage" maxlength="2" placeholder="90"
                                    pattern="[0-9]{2}" /></td>
                            <td><input type="text" name="Graduation_YrOfPassing" maxlength="4" pattern="[0-9]{4}"
                                    placeholder="2000" /></td>
                        </tr>
                        <tr>
                            <td>4</td>
                            <td>Masters</td>
                            <td><input type="text" name="Masters_Board" maxlength="30"
                                    placeholder="Enter College Name" /></td>
                            <td><input type="text" name="Masters_Percentage" maxlength="2" placeholder="90"
                                    pattern="[0-9]{2}" /></td>
                            <td><input type="text" name="Masters_YrOfPassing" maxlength="4" placeholder="2000"
                                    pattern="[0-9]{4}" /></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td align="center">(10 char max)</td>
                            <td align="center">(Only Percentage)</td>
                        </tr>
                    </table>
                </td>
            </tr> <!----- Course ---------------------------------------------------------->
             <!----- Submit and Reset ------------------------------------------------->
            <tr>
                <td colspan="2" align="center"> <input type="submit" value="Submit"> <input type="reset" value="Reset">
                </td>
            </tr>
        </table>
    </form>
</body>

</html>
